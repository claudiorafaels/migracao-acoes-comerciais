@model Marketing.GestaoVerbas.Core.Grid.GridSetings<Marketing.GestaoVerbas.ViewModel.NegociacaoVerbaViewModel>

@{
    AjaxOptions ajaxOptions = new AjaxOptions()
    {
        UpdateTargetId = "appendFindNegociacao",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "DefaultAjaxBegin",
        OnComplete = "DefaultAjaxComplete",
        OnSuccess = "findNegociacaoResult",
        OnFailure = "DefaultAjaxFailure",
        HttpMethod = "POST"
    };
}



@using (Ajax.BeginForm("FindNegociacao", "Negociacao", ajaxOptions, new { @id = "frmPesquisaNegociacao", @class = "form-pagination" }))
{
    @Html.AntiForgeryToken()

    <div class="modal" tabindex="-1" role="dialog" id="mdlPesquisaNegociacao">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary" style="color:white;">
                    <h5 class="modal-title" id="myModalLabel">Selecionar Negociação</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body bg-light">
                    <div class="container card bg-primary divFiltrosPesquisa">
                        <div class="py-1" style="color:white;">
                            <h5>Pesquisar</h5>
                        </div>
                        <div class="row bg-light">
                            <div class="col-4">
                                @Html.LabelFor(model => model.Filtro.CodNegociacaoVerba)
                                @Html.EditorFor(model => model.Filtro.CodNegociacaoVerba, new { htmlAttributes = new { @class = "form-control", data_val = false } })
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Filtro.DesNegociacaoVerba)
                                @Html.EditorFor(model => model.Filtro.DesNegociacaoVerba, new { htmlAttributes = new { @class = "form-control", data_val = false } })
                            </div>
                            <div class="col-2">
                                <label>&nbsp;</label>
                                <br />
                                <input type="submit" id="btnPesquisarNegociacao" class="btn btn-sm btn-primary" title="Pesquisar" value="Pesquisar" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="container card bg-primary">
                        <div class="row bg-secondary">
                            <div class="table-responsive">
                                <div class="dataTables_wrapper">
                                    <table class="table table-striped table-bordered table-hover dataTable">
                                        <thead class="bg-secondary">
                                            <tr>
                                                <th>Ações</th>
                                                <th>
                                                    <button type="submit" class="bg-secondary" style="border:none;" sort-expression="NomNegociacao">
                                                        @Html.DisplayNameFor(model => model.Filtro.CodNegociacaoVerba)
                                                    </button>
                                                </th>
                                                <th>
                                                    <button type="submit" class="bg-secondary" style="border:none;" sort-expression="NomNegociacao">
                                                        @Html.DisplayNameFor(model => model.Filtro.DesNegociacaoVerba)
                                                    </button>
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody class="bg-light border">
                                            @foreach (var item in Model.Result)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button type="button" class="btn btn-sm btn-primary fa fa-check" onclick="findNegociacaoSelect(@item.CodNegociacaoVerba, '@item.DesNegociacaoVerba')"></button>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CodNegociacaoVerba)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DesNegociacaoVerba)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @Html.Partial(Marketing.GestaoVerbas.Core.Grid.Constantes.VIEW_PAGINACAO, Model.Setings, new ViewDataDictionary { TemplateInfo = new TemplateInfo { HtmlFieldPrefix = "Setings" } })


                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-warning">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}



