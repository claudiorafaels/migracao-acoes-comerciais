@model Marketing.GestaoVerbas.Core.Grid.GridSetings<Marketing.GestaoVerbas.ViewModel.GrupoADViewModel>

@{
    AjaxOptions ajaxOptions = new AjaxOptions()
    {
        UpdateTargetId = "appendFindNegociacao",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "DefaultAjaxBegin",
        OnComplete = "DefaultAjaxComplete",
        OnSuccess = "findGrupoADResult",
        OnFailure = "DefaultAjaxFailure",
        HttpMethod = "POST"
    };
}


@using (Ajax.BeginForm("FindGrupoAD", "Grupo AD", ajaxOptions, new { @id = "frmPesquisaGrupoAD", @class = "form-pagination" }))
{
    @Html.AntiForgeryToken()

    <div class="modal" tabindex="-1" role="dialog" id="mdlPesquisaGrupoAD">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary" style="color:white;">
                    <h5 class="modal-title" id="myModalLabel">Selecionar Grupo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                    <div class="modal-body bg-light">
                        <div class="container card bg-primary">
                            <div class="py-1" style="color:white;">
                                <h5>Pesquisar</h5>
                            </div>
                        </div>
                        <div class="row bg-light">
                            <div class="col-4">
                                @Html.LabelFor(model => model.Filtro.CodGrupoAcesso)
                                @Html.EditorFor(model => model.Filtro.CodGrupoAcesso, new { htmlAttributes = new { @class = "form-control", data_val = false } })
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Filtro.DesGrupoAcesso)
                                @Html.EditorFor(model => model.Filtro.DesGrupoAcesso, new { htmlAttributes = new { @class = "form-control", data_val = false } })
                            </div>
                            <div class="col-2">
                                <label>&nbsp;</label>
                                <br />
                                <input type="submit" id="btnPesquisarGrupoAD" class="btn btn-sm btn-primary" title="Pesquisar" value="Pesquisar" />
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="container card bg-primary">
                        <div class="row bg-secondary">
                            <div class="table-responsive">
                                <div class="dataTables_wrapper">
                                    <table class="table table-striped table-bordered table-hover dataTable">
                                        <thead class="bg-secondary">
                                            <tr>
                                                <th>Ações</th>
                                                <th>
                                                    <button type="submit" class="bg-secondary" style="border:none;" sort-expression="DesGrupoAcesso">
                                                        @Html.DisplayNameFor(model => model.Filtro.CodGrupoAcesso)
                                                    </button>
                                                </th>
                                                <th>
                                                    <button type="submit" class="bg-secondary" style="border:none;" sort-expression="DesGrupoAcesso">
                                                        @Html.DisplayNameFor(model => model.Filtro.DesGrupoAcesso)
                                                    </button>
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody class="bg-light border">
                                            @foreach (var item in Model.Result)
                                             {
                                                <tr>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button type="button" class="btn btn-sm btn-primary fa fa-check" onclick="findGrupoADSelect(@item.CodGrupoAcesso, '@item.DesGrupoAcesso')"></button>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CodGrupoAcesso)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DesGrupoAcesso)
                                                    </td>
                                                </tr>
                                             }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-warning">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

                                                                                                                                                                                                         