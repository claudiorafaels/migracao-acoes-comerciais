@model Marketing.GestaoVerbas.Core.Grid.GridSetings<Marketing.GestaoVerbas.ViewModel.MercadoriaViewModel>

@{
    AjaxOptions ajaxOptions = new AjaxOptions()
    {
        UpdateTargetId = "appendFindMercadoria",
        InsertionMode = InsertionMode.Replace,
        OnBegin = "DefaultAjaxBegin",
        OnComplete = "DefaultAjaxComplete",
        OnSuccess = "findMercadoriaResult",
        OnFailure = "DefaultAjaxFailure",
        HttpMethod = "POST"
    };
}



@using (Ajax.BeginForm("Pesquisar", "Mercadoria", ajaxOptions, new { @id = "frmPesquisaMercadoria", @class = "form-pagination" }))
{
    @Html.AntiForgeryToken()

    <div class="modal" tabindex="-1" role="dialog" id="mdlPesquisaMercadoria">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary" style="color:white;">
                    <h5 class="modal-title" id="myModalLabel">Selecionar Filial Empresa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body bg-light">
                    <div class="container card bg-primary divFiltrosPesquisa">
                        <div class="py-1" style="color:white;">
                            <h5>Pesquisar</h5>
                        </div>
                        <div class="row bg-light">
                            <div class="col-4">
                                @Html.LabelFor(model => model.Filtro.CodMercadoria)
                                @Html.EditorFor(model => model.Filtro.CodMercadoria, new { htmlAttributes = new { @class = "form-control", data_val = false } })
                            </div>
                            <div class="col-6">
                                @Html.LabelFor(model => model.Filtro.NomMercadoria)
                                @Html.EditorFor(model => model.Filtro.NomMercadoria, new { htmlAttributes = new { @class = "form-control", data_val = false } })
                            </div>
                            <div class="col-2">
                                <label>&nbsp;</label>
                                <br />
                                <button type="submit" id="btnPesquisarMercadoria" class="btn btn-sm btn-primary" title="Pesquisar" value="Pesquisar">Pesquisar</button>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="container card bg-primary">
                        <div class="row bg-secondary">
                            <div class="table-responsive">
                                <div class="dataTables_wrapper">
                                    <table class="table table-striped table-bordered table-hover dataTable">
                                        <thead class="bg-secondary">
                                            <tr>
                                                <th>Ações</th>
                                                <th>
                                                    <button type="submit" class="" style="border:none;" sort-expression="NomMercadoria">
                                                        @Html.DisplayNameFor(model => model.Filtro.CodMercadoria)
                                                    </button>
                                                </th>
                                                <th>
                                                    <button type="submit" class="" style="border:none;" sort-expression="NomMercadoria">
                                                        @Html.DisplayNameFor(model => model.Filtro.NomMercadoria)
                                                    </button>
                                                </th>
                                              
                                            </tr>
                                        </thead>
                                        <tbody class="bg-light border">
                                            @foreach (var item in Model.Result)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button type="button" class="btn btn-sm btn-primary fa fa-check" onclick="findMercadoriaSelect(@item.CodMercadoria, '@item.NomMercadoria')"></button>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CodMercadoria)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NomMercadoria)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @Html.Partial(Marketing.GestaoVerbas.Core.Grid.Constantes.VIEW_PAGINACAO, Model.Setings, new ViewDataDictionary { TemplateInfo = new TemplateInfo { HtmlFieldPrefix = "Setings" } })


                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-warning">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}


